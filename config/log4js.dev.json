{
    "appenders": {
        "logToFile": {
            "type": "file",
            "maxLogSize": 1000000000,
            "filename": "log/asmodee-server-dev.log"
        },
        "stdout": {
            "type": "stdout"
        },
        "console": {
            "type": "console"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "logToFile", "stdout", "console"
            ],
            "level": "info"
        },
        "asmodee-server": {
            "appenders": [
                "logToFile", "stdout", "console"
            ],
            "level": "info"
        }
    }
}
